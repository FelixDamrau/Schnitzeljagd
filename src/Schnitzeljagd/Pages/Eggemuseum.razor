@page "/eggemuseum"

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="xs-16">
    <MudText Typo="Typo.h3" GutterBottom="true">Wer hat das Gebäude des Eggemusums erbaut?</MudText>
    <MudRadioGroup @bind-SelectedOption="selected">
        <MudRadio Option="1" Color="Color.Secondary" Size="Size.Large">Joseph Haider und Teresa Stiens</MudRadio>
        <MudRadio Option="2" Color="Color.Secondary" Size="Size.Large">Joseph Klahold und Louise Stiens</MudRadio>
        <MudRadio Option="3" Color="Color.Secondary" Size="Size.Large">Janus Holdt und Annegret Stein</MudRadio>
        <MudRadio Option="4" Color="Color.Secondary" Size="Size.Large">Jonas Hardt und Elli Stahn</MudRadio>
    </MudRadioGroup>

    <SubmitButton AnswerValid=IsValid AnswerCorrect=IsCorrect NextPage="fire" />
</MudContainer>

@code {
    private int selected = -1;

    private bool IsCorrect() => selected == 2;

    private bool IsValid() => selected >= 1 && selected <= 4;
}