@page "/images"

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="xs-16">
    <MudText Typo="Typo.h3" GutterBottom="true">Was war das Schild an der ersten Station?</MudText>
    <MudRadioGroup @bind-SelectedOption="Selected">
        <MudRadio Option="3" Color="Color.Secondary" Size="Size.Large"><img src="images/3.jpg" width="280" /></MudRadio>
        <MudRadio Option="2" Color="Color.Secondary" Size="Size.Large"><img src="images/2.jpg" height="280" /></MudRadio>
        <MudRadio Option="1" Color="Color.Secondary" Size="Size.Large"><img src="images/1.jpg" width="280" /></MudRadio>
        <MudRadio Option="4" Color="Color.Secondary" Size="Size.Large"><img src="images/4.jpg" width="280" /></MudRadio>
    </MudRadioGroup>

    <MudButton Variant="Variant.Filled" Color="Color.Secondary" Link="@GetPage()">Lösung abgeben</MudButton>
</MudContainer>

@code {
    public int Selected { get; set; } = 3;

    public string GetPage()
    {
        return Selected switch
        {
            1 => "birds",
            _ => "wrong"
        };
    }
}