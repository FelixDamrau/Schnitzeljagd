@page "/landmark"

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="xs-16">
    <MudText Typo="Typo.h3" GutterBottom="true">Was ist das Wahrzeichen Altenbekens?</MudText>
    <MudRadioGroup @bind-SelectedOption="selected">
        <MudRadio Option="1" Color="Color.Secondary" Size="Size.Large">Das Viadukt</MudRadio>
        <MudRadio Option="2" Color="Color.Secondary" Size="Size.Large">Das Viadukt</MudRadio>
        <MudRadio Option="3" Color="Color.Secondary" Size="Size.Large">Das Viadukt</MudRadio>
        <MudRadio Option="4" Color="Color.Secondary" Size="Size.Large">Ja, das Viadukt</MudRadio>
    </MudRadioGroup>

    <SubmitButton AnswerValid=IsValid AnswerCorrect=IsCorrect NextPage="spielmann" />
</MudContainer>

@code {
    private int selected = -1;

    private bool IsCorrect() => selected >= 1 && selected <= 4;

    private bool IsValid() => selected >= 1 && selected <= 4;
}