@page "/spielmann"

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="xs-16">
    <MudText Typo="Typo.h3" GutterBottom="true">Wie viele Rosen trägt der Spielmann bei sich?</MudText>
    <MudRadioGroup @bind-SelectedOption="selected">
        <MudRadio Option="1" Color="Color.Secondary" Size="Size.Large">0</MudRadio>
        <MudRadio Option="2" Color="Color.Secondary" Size="Size.Large">1</MudRadio>
        <MudRadio Option="3" Color="Color.Secondary" Size="Size.Large">2</MudRadio>
        <MudRadio Option="4" Color="Color.Secondary" Size="Size.Large">3</MudRadio>
    </MudRadioGroup>

    <SubmitButton AnswerValid=IsValid AnswerCorrect=IsCorrect NextPage="pastor" />
</MudContainer>

@code {
    private int selected = -1;

    private bool IsCorrect() => selected == 4;

    private bool IsValid() => selected >= 1 && selected <= 4;
}