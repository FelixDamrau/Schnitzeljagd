@page "/pastor"

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="xs-16">
    <MudText Typo="Typo.h3" GutterBottom="true">Welcher der Altenbekener Pfarrer wurde am ältesten?</MudText>
    <MudRadioGroup @bind-SelectedOption="selected">
        <MudRadio Option="1" Color="Color.Secondary" Size="Size.Large">Pfarrer Georg Kersting</MudRadio>
        <MudRadio Option="2" Color="Color.Secondary" Size="Size.Large">Pfarrerin Katrin Elhaus</MudRadio>
        <MudRadio Option="3" Color="Color.Secondary" Size="Size.Large">Pfarrer Martin Götze</MudRadio>
        <MudRadio Option="4" Color="Color.Secondary" Size="Size.Large">Pfarrer Hubertus Wiedeking</MudRadio>
        <MudRadio Option="5" Color="Color.Secondary" Size="Size.Large">Pfarrer Rainer Unglaub</MudRadio>
    </MudRadioGroup>

    <MudButton Disabled=@(!IsValid()) Variant="Variant.Filled" Color="Color.Secondary" Link="@GetPage()">Lösung abgeben</MudButton>
</MudContainer>

@code {
    private int selected  = -1;

    private string GetPage()
    {
        return selected switch
        {
            4 => "code",
            _ => "wrong"
        };
    }

    private bool IsValid() => selected >= 1 && selected <= 5;
}