@page "/db044"

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="xs-16">
    <MudText Typo="Typo.h3" GutterBottom="true">Wie viele Räder hat die Dampflok Altenbekens - inklusive Tender?</MudText>
    <MudRadioGroup @bind-SelectedOption="selected">
        <MudRadio Option="1" Color="Color.Secondary" Size="Size.Large">12</MudRadio>
        <MudRadio Option="2" Color="Color.Secondary" Size="Size.Large">14</MudRadio>
        <MudRadio Option="3" Color="Color.Secondary" Size="Size.Large">18</MudRadio>
        <MudRadio Option="4" Color="Color.Secondary" Size="Size.Large">20</MudRadio>
    </MudRadioGroup>

    <SubmitButton AnswerValid=IsValid AnswerCorrect=IsCorrect NextPage="memorial" />
</MudContainer>

@code {
    private int selected = -1;

    private bool IsCorrect() => selected == 4;

    private bool IsValid() => selected >= 1 && selected <= 4;
}