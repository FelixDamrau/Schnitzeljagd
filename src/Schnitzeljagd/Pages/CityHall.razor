@page "/cityhall"

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="xs-16">
    <MudText Typo="Typo.h3" GutterBottom="true">Was zeigt das Wappen Altenbekens</MudText>
    <MudRadioGroup @bind-SelectedOption="selected">
        <MudRadio Option="1" Color="Color.Secondary" Size="Size.Large">Fisch</MudRadio>
        <MudRadio Option="2" Color="Color.Secondary" Size="Size.Large">Fluss</MudRadio>
        <MudRadio Option="3" Color="Color.Secondary" Size="Size.Large">Berg</MudRadio>
        <MudRadio Option="4" Color="Color.Secondary" Size="Size.Large">Viadukt</MudRadio>
    </MudRadioGroup>

    <SubmitButton AnswerValid=IsValid AnswerCorrect=IsCorrect NextPage="train" />
</MudContainer>

@code {
    private int selected = -1;

    private bool IsCorrect() => selected == 4;

    private bool IsValid() => selected >= 1 && selected <= 4;
}