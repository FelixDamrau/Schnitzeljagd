@page "/icecream"

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="xs-16">
    <MudText Typo="Typo.h3" GutterBottom="true">Wie heißt der Eisladen Altenbekens?</MudText>
    <MudRadioGroup @bind-SelectedOption="selected">
        <MudRadio Option="1" Color="Color.Secondary" Size="Size.Large">Eiscafé Mosena</MudRadio>
        <MudRadio Option="2" Color="Color.Secondary" Size="Size.Large">EIS molin</MudRadio>
        <MudRadio Option="3" Color="Color.Secondary" Size="Size.Large">Eiscafé Artusa</MudRadio>
        <MudRadio Option="4" Color="Color.Secondary" Size="Size.Large">Eiscafé am Brunnen</MudRadio>
    </MudRadioGroup>

    <SubmitButton AnswerValid=IsValid AnswerCorrect=IsCorrect NextPage="code" />
</MudContainer>

@code {
    private int selected  = -1;

    private bool IsCorrect() => selected == 2;

    private bool IsValid() => selected >= 1 && selected <= 4;
}