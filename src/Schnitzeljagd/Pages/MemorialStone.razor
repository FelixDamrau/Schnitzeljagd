@page "/memorial"

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="xs-16">
    <MudText Typo="Typo.h3" GutterBottom="true">Was für ein Gebäude Stand am Standort der Lok im 17. bis zum 20. Jahrhundert?</MudText>
    <MudRadioGroup @bind-SelectedOption="selected">
        <MudRadio Option="1" Color="Color.Secondary" Size="Size.Large">Feuerwehr</MudRadio>
        <MudRadio Option="2" Color="Color.Secondary" Size="Size.Large">Bahnhof</MudRadio>
        <MudRadio Option="3" Color="Color.Secondary" Size="Size.Large">Schmiede</MudRadio>
        <MudRadio Option="4" Color="Color.Secondary" Size="Size.Large">Bauernhof</MudRadio>
    </MudRadioGroup>

    <SubmitButton AnswerValid=IsValid AnswerCorrect=IsCorrect NextPage="spritzenhaus" />
</MudContainer>

@code {
    private int selected = -1;

    private bool IsCorrect() => selected == 3;

    private bool IsValid() => selected >= 1 && selected <= 4;
}