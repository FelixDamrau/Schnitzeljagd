@page "/fire"

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="xs-16">
    <MudText Typo="Typo.h3" GutterBottom="true">Wie viele Tore für Fahrzeuge hat die Feuerwehr Altenbeken?</MudText>
    <MudRadioGroup @bind-SelectedOption="selected">
        <MudRadio Option="1" Color="Color.Secondary" Size="Size.Large">3</MudRadio>
        <MudRadio Option="2" Color="Color.Secondary" Size="Size.Large">4</MudRadio>
        <MudRadio Option="3" Color="Color.Secondary" Size="Size.Large">5</MudRadio>
        <MudRadio Option="4" Color="Color.Secondary" Size="Size.Large">6</MudRadio>
    </MudRadioGroup>

    <SubmitButton AnswerValid=IsValid AnswerCorrect=IsCorrect NextPage="db044" />
</MudContainer>

@code {
    private int selected = -1;

    private bool IsCorrect() => selected == 3;

    private bool IsValid() => selected >= 1 && selected <= 4;
}