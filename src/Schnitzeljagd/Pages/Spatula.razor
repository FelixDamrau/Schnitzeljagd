@page "/spatula"

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="xs-16">
    <MudText Typo="Typo.h3" GutterBottom="true">Welche Farbe hat der Spachel des "Spachtel-Denkmals"?</MudText>
    <MudRadioGroup @bind-SelectedOption="selected">
        <MudRadio Option="1" Color="Color.Secondary" Size="Size.Large">Blau</MudRadio>
        <MudRadio Option="2" Color="Color.Secondary" Size="Size.Large">Grau</MudRadio>
        <MudRadio Option="3" Color="Color.Secondary" Size="Size.Large">Grün</MudRadio>
        <MudRadio Option="4" Color="Color.Secondary" Size="Size.Large">Rot</MudRadio>
    </MudRadioGroup>

    <SubmitButton AnswerValid=IsValid AnswerCorrect=IsCorrect NextPage="landmark" />
</MudContainer>

@code {
    private int selected = -1;

    private bool IsCorrect() => selected == 4;

    private bool IsValid() => selected >= 1 && selected <= 4;
}