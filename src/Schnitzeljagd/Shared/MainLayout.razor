@inherits LayoutComponentBase

<MudThemeProvider Theme="darkTheme" />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudText Typo="Typo.h5" Class="ml-3">Schlüsselversteck</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Filled.Cake" Color="Color.Success" Size="Size.Small" Link="/cake" />
        <MudTooltip Text="GitHub Repository">
            <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Dark" Size="Size.Small" Link="https://github.com/FelixDamrau/Schnitzeljagd" Target="_blank" />
        </MudTooltip>
        <MudChip Size="Size.Small" Variant="Variant.Outlined" Color="Color.Dark">v1.8</MudChip>
    </MudAppBar>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

